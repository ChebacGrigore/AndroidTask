<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
       >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            android:alpha="0.75"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
                <TextView
                    android:id="@+id/task_date_adp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:fontFamily="@font/alma_alternates"
                    android:textColor="@color/my_favorite_color"
                    android:textSize="18sp"
                    android:layout_marginStart="10sp"
                    android:paddingTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/task_time_adp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alma_alternates"
                    android:text="Time:"
                    android:textColor="@color/my_favorite_color"
                    android:layout_marginStart="10sp"
                    android:paddingTop="5dp"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/task_date_adp"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/purpose_text_adp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task_Text"
                    android:fontFamily="@font/alma_alternates"
                    android:textSize="18sp"
                    android:textColor="@color/my_favorite_color"
                    android:layout_marginStart="10sp"
                    android:paddingTop="5dp"
                    app:layout_constraintStart_toEndOf="@id/task_time_adp"
                    app:layout_constraintTop_toTopOf="parent"

                    />






            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>